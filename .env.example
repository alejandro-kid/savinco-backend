# Application Configuration
APP_NAME=financial-backend

# Server Configuration
SERVER_PORT=8080

# Database Configuration
DATABASE_URL=jdbc:postgresql://localhost:5432/savinco_financial
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
DATABASE_DRIVER=org.postgresql.Driver

# JPA/Hibernate Configuration
JPA_DDL_AUTO=update
JPA_SHOW_SQL=true
HIBERNATE_DIALECT=org.hibernate.dialect.PostgreSQLDialect
HIBERNATE_FORMAT_SQL=true

# Swagger/OpenAPI Configuration
SWAGGER_ENABLED=true
SWAGGER_API_DOCS_PATH=/api-docs
SWAGGER_UI_PATH=/swagger-ui.html

# Actuator Configuration
ACTUATOR_ENDPOINTS=health,info
ACTUATOR_HEALTH_DETAILS=when-authorized

# Logging Configuration
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=DEBUG
LOG_LEVEL_SPRING_WEB=INFO
LOG_LEVEL_HIBERNATE_SQL=DEBUG
